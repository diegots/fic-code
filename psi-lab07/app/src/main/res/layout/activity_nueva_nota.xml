<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.udc.psi14.lab07trabazo.NuevaNota"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:id="@+id/tv_nombre"
                android:text="@string/tv_nombre"/>
            <EditText
                android:id="@+id/et_nombre"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_apellido"
                android:text="@string/tv_apellido"/>
            <EditText android:id="@+id/et_apellido"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_materia"
                android:text="@string/tv_materia"/>
            <EditText android:id="@+id/et_materia"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_mencion"
                android:text="@string/tv_mencion"/>
            <EditText android:id="@+id/et_mencion"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_nota"
                android:text="@string/tv_nota"/>
            <EditText android:id="@+id/et_nota"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bt_add"
        android:text="@string/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_edit"
        android:text="@string/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</LinearLayout>
